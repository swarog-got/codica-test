<div class="row row-cols-1 row-cols-md-2">
  <% @category_doctors.each do |doctor| %>
    <div class="col mb-3">
      <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
          <h5 class="ms-2 d-flex align-items-center">
            <span class="mx-2"><%= doctor.first_name %> <%= doctor.last_name %></span>
          </h5>
          <%= link_to "Записаться на приём",
              new_appointment_path(doctor_id: doctor),
              data: { turbo_frame: :modal },
              class: "btn text-white", style: "background: #1ec8c8;" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<hr>
<%== pagy_bootstrap_nav(@pagy) %>